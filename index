<script>
  function mostrarSeccion(id) {
    const secciones = document.querySelectorAll('.contenido');
    secciones.forEach(seccion => {
      seccion.classList.remove('contenido-activo');
    });
    document.getElementById(id).classList.add('contenido-activo');
  }
</script>

